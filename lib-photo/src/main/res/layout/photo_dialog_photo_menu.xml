<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7f7">

    <TextView
        android:id="@+id/tv_take"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#333"
        android:textSize="15sp"
        android:text="拍照"
        android:gravity="center"
        android:background="#fff"/>

    <TextView
        android:id="@+id/tv_album"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textColor="#333"
        android:textSize="15sp"
        android:text="相册"
        android:gravity="center"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/tv_take"
        android:layout_marginTop="1dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textColor="#333"
        android:textSize="15sp"
        android:text="保存到相册"
        android:gravity="center"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/tv_album"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textColor="#333"
        android:textSize="15sp"
        android:text="@string/photo_lib_photo_cancel"
        android:gravity="center"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/tv_save"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>